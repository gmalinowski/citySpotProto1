<article class="max-w-64">

  <% if point.photos&.size < 2 %>
    <div class="w-max grid grid-cols-1 gap-2">
  <% else %>
    <div class="w-max grid grid-cols-2 gap-2">
  <% end %>
  <% point.photos.first(4).each do |photo| %>
    <%= link_to url_for(photo), target: "_blank" do %>
      <%= image_tag url_for(photo), class: "w-20 md:w-32 object-contain rounded-lg" %>
    <% end %>
  <% end %>
  </div>
  <div class="pt-3">
    <%= link_to point do %>
      <h1 class="text-base"><%= point.name %></h1>
    <% end %>
    <% if point.description.present? %>
    <p class="text-sm text-gray-500 max-h-32">
      <% if point.description.size > 33 %>
      <%= point&.description[..33]... %>
        <% else %>
        <%= point&.description %>
        <% end %>
    </p>
      <% end %>
  </div>

  <div class="flex py-2 gap-2">
    <%= button_to "Show more", point, method: :get, class: "btn btn-xs btn-success" %>
    <%= button_to "Edit", edit_point_path(point), method: :get, class: "btn btn-xs btn-primary" %>
    <div class="ml-auto">

    <%= button_to "Delete", point, method: :delete, class: "ml-auto btn btn-xs btn-danger", form: {data: {turbo_confirm: 'Are you sure?'}} %>
    </div>
  </div>

</article>
