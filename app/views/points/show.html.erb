
<article class="py-8">

<h1 class="text-4xl font-extrabold dark:text-white"><%= @point.name %></h1>

<div id="default-carousel" class="relative w-full mt-8" data-carousel="static">
  <!-- Carousel wrapper -->
  <div class="relative h-64 overflow-hidden rounded-lg md:h-128">
    <!-- Item 1 -->
    <% @point.photos.each do |photo| %>
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <%= link_to url_for(photo) do %>
        <%= image_tag url_for(photo), alt: photo.filename, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <!-- Slider indicators -->
  <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
    <% @point.photos.each_with_index do |photo, index| %>
      <%= button_tag "", type: "button", class: "w-3 h-3 rounded-full", data: {carousel_slide_to: index, aria_label: "slide #{index}"} %>
    <% end %>
  </div>
  <!-- Slider controls -->
  <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Previous</span>
        </span>
  </button>
  <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="sr-only">Next</span>
        </span>
  </button>
</div>

  <p class="p-3 text-justify mb-3 text-gray-500 dark:text-gray-400 first-line:uppercase first-line:tracking-widest first-letter:text-7xl first-letter:font-bold first-letter:text-gray-900 dark:first-letter:text-gray-100 first-letter:me-3 first-letter:float-start">
    <%= @point.description %>
  </p>

  <hr class="my-8" />
  <div data-controller="copy" data-copy-text-value="<%= "#{@point.latitude} #{@point.longitude}" %>">
    <button class="btn btn-xs btn-success" data-action="copy#copy">Copy</button>
 <p class="mt-3 text-blue-500 dark:text-blue-400" >
   <span class="text-lg text-black dark:text-white">WGS84:</span> <%= @point.latitude %> <%= @point.longitude %>
 </p>
  </div>

  <div class="mt-8 flex flex-wrap gap-4 text-green-700">
    <%= link_to "Open in Mapy.com", "https://mapy.com/fnc/v1/showmap?center=#{@point.longitude},#{@point.latitude}&marker=true", target: "_blank" %>
    <%= link_to "Open in Google Maps", "https://www.google.com/maps?q=#{@point.latitude},#{@point.longitude}", target: "_blank" %>
  </div>

</article>
